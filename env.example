# === REQUIRED FOR ALL SCRIPTS ===
DEPLOYER_PRIVATE_KEY=your_private_key_here

# === RPC CONFIGURATION ===
# API Key for RPC provider (Alchemy, Infura, QuickNode, etc.)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Constructed RPC URLs (referenced in foundry.toml [rpc_endpoints])
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# === REQUIRED FOR SPECIFIC SCRIPTS ===

# LiquidFactoryDeploy.s.sol
PROTOCOL_FEE_RECIPIENT=0x...

# CreateToken.s.sol
FACTORY_ADDRESS=0x...
TOKEN_CREATOR=0x...
TOKEN_URI=ipfs://...
TOKEN_NAME="My Token"
TOKEN_SYMBOL="MTK"

# V4 Liquidity Scripts (AddV4Liquidity, AddV4ViaHelper, DeployV4Pool when ADD_LIQUIDITY=true)
ETH_AMOUNT=1000000000000000000
TOKEN_AMOUNT=1000000000000000000

# === OPTIONAL (with sensible defaults) ===

# Override chain ID detection (usually not needed - defaults to block.chainid)
# CHAIN_ID=8453  # Base mainnet
# CHAIN_ID=84532  # Base Sepolia

# DeployV4Pool.s.sol optional parameters
# ADD_LIQUIDITY=true
# SQRT_PRICE_X96=79228162514264337593543950336  # 1:1 price
# POOL_FEE=3000
# TICK_SPACING=60
# TICK_LOWER=-120000
# TICK_UPPER=120000
# SEPARATE_INIT=false

# AddV4Liquidity.s.sol optional parameters
# SINGLE_SIDED_LEG=BALANCED  # or "ETH" or "TOKEN"

# RAREBurnerDeploy.s.sol optional parameters
# BURNER_TRY_ON_DEPOSIT=true
# BURNER_POOL_FEE=3000
# BURNER_TICK_SPACING=60
# BURNER_HOOKS=0x0000000000000000000000000000000000000000
# BURNER_BURN_ADDRESS=0x000000000000000000000000000000000000dEaD
# BURNER_V4_QUOTER=0x0000000000000000000000000000000000000000
# BURNER_MAX_SLIPPAGE_BPS=0
# BURNER_ENABLED=true

# CreateToken.s.sol optional parameter
# INITIAL_ETH=100000000000000000  # 0.1 ETH
